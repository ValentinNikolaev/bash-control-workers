#!/bin/bash

DIR="${BASH_SOURCE%/*}"
if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
. "$DIR/conf.sh"

checkSudo
checkScriptParams

for process_name in "$LIST_WORKERS"; do
  process_run=0
  process_counter=$(getProcessCounter $process_name)
  if [ -z "$process_counter" ]; then
    startBashCommand "$process_name"
  else
    if [[ $process_counter -gt 1 ]]; then
      startBashCommand "$process_name"
    else
      killProcess $process_name
      msg "$process_name running."
    fi
  fi
done

